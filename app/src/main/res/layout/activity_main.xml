<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/varAEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/varBEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/varAEdit" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Var A"
        app:layout_constraintEnd_toStartOf="@+id/varAEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Var B"
        app:layout_constraintEnd_toStartOf="@+id/varBEdit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/multBtn"
        android:layout_width="84dp"
        android:layout_height="47dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="104dp"
        android:text="mult"
        app:layout_constraintStart_toEndOf="@+id/sumBtn"
        app:layout_constraintTop_toBottomOf="@+id/varBEdit" />

    <Button
        android:id="@+id/divBtn"
        android:layout_width="84dp"
        android:layout_height="47dp"
        android:layout_marginTop="104dp"
        android:text="div"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/multBtn"
        app:layout_constraintTop_toBottomOf="@+id/varBEdit" />

    <Button
        android:id="@+id/diffBtn"
        android:layout_width="84dp"
        android:layout_height="47dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="104dp"
        android:text="diff"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/varBEdit" />

    <Button
        android:id="@+id/sumBtn"
        android:layout_width="84dp"
        android:layout_height="47dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="104dp"
        android:text="sum"
        app:layout_constraintStart_toEndOf="@+id/diffBtn"
        app:layout_constraintTop_toBottomOf="@+id/varBEdit" />

    <TextView
        android:id="@+id/resultView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="TextView"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diffBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>